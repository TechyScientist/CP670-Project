<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llCurrentPassword"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currentPasswordLabel"
            android:textColor="@color/darkPurple" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="@string/currentPassword"
            android:id="@+id/etCurrentPassword"
            android:ems="10"
            android:backgroundTint="@color/darkPurple"
            android:textCursorDrawable="@drawable/cursor"
            android:inputType="textPassword"
            android:autofillHints="no" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llNewPassword"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/llCurrentPassword"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newPasswordLabel"
            android:textColor="@color/darkPurple" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="@string/newPassword"
            android:id="@+id/etNewPassword"
            android:ems="10"
            android:backgroundTint="@color/darkPurple"
            android:textCursorDrawable="@drawable/cursor"
            android:inputType="textPassword"
            android:autofillHints="no" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llConfirmPassword"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/llNewPassword"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmPasswordLabel"
            android:textColor="@color/darkPurple" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="@string/confirmPassword"
            android:id="@+id/etConfirmPassword"
            android:ems="10"
            android:backgroundTint="@color/darkPurple"
            android:textCursorDrawable="@drawable/cursor"
            android:inputType="textPassword"
            android:autofillHints="no" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btChangePw"
        android:text="@string/changepw"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        android:textColor="@color/lightPurple"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/llConfirmPassword"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>